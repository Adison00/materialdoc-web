{
  "hosting": {
    "public": "site",
    "ignore": [
      "firebase.json"
    ],

    "rewrites": [
        {
          "source": "abs",
          "destination": "/components/buttons.html"
        }
    ],

    "redirects": [
        {
          "source" : "/components/",
          "destination" : "/components/buttons",
          "type" : 301
        },
        {
          "source" : "/raised-button/",
          "destination" : "/components/buttons/#flat-button",
          "type" : 301
        },
        {
          "source" : "/linear-progress/",
          "destination" : "/components/progress/#linear",
          "type" : 301
        },
        {
          "source" : "/alerts/",
          "destination" : "/components/dialogs/#alerts",
          "type" : 301
        },
        {
          "source" : "/edit-text/",
          "destination" : "/components/text-fields/",
          "type" : 301
        },
        {
          "source" : "/flat-button/",
          "destination" : "/components/buttons/#flat-button",
          "type" : 301
        },
        {
          "source" : "/switch/",
          "destination" : "/components/selection-controls/#switch",
          "type" : 301
        },
        {
          "source" : "/rating-bar/",
          "destination" : "/components/rating-bar/",
          "type" : 301
        },
        {
          "source" : "/circular-progress/",
          "destination" : "/components/progress/#circular",
          "type" : 301
        },
        {
          "source" : "/color-picker/",
          "destination" : "/components/pickers/#color-picker",
          "type" : 301
        }
        
    ]
  }
}
